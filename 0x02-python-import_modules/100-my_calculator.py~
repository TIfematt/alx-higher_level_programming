from calculator_1 import add, sub, mul, div
import sys

if __name__ != "__main__":
    exit()

a = (int) sys.argv[1]
operator = sys.argv[2]
b = (int) sys.argv[3]
result = 0

if operator == '+':
    result = a + b
elif operator == '-':
    result = a - b
elif operator == '*':
    result = a * b
elif operator == '/':
    result = a / b
else:
    print("Unknown operator. Available operators: +, -, * and /")
    
print(f"{a} {operator} {b} = {result}")
